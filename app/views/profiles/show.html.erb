<h1> <%= @profile.first_name %> </h1>
<h4> <%= @profile.description %> </h4>

<% @profile.user.review_me.each do |review|%>
    <div class="review-card">
        <h2> <%= review.reviewer.profile.first_name %> </h2>
        <h6> <%= review.title %> </h6> 
        <p> <%= review.description %> </p>
    </div>
<% end %>
