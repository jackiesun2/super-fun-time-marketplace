<% listing.errors.full_messages.each do |message| %>
    <li> <%= message %> </li>
<% end %>

<%= form_with model: listing do |form| %>
  <div class="form-group">
    <%= form.label :title%>
    <%= form.text_field :title, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :description%>
    <%= form.text_area :description, class: "form-control"%>
  </div>
  <div class="form-group">
    <%= form.label :location%>
    <%= form.text_field :location, class: "form-control"%>
    <small class="form-text text-muted">Location format: Addresses, Suburb, Postcode: <br> 30 Queen St, Melbourne, 3000 <br> Landmarks can have names: <br> Bondi Beach </small>
  </div>
  <div class="form-group">
    <%= form.label :images%>
    <%= form.file_field :images, accept: 'image/png, image/jpeg, image/jpg', class: "form-control-file"  %>
  </div>
  <br>
  <%= form.submit :class => 'btn btn-primary btn-block'%>
<% end %>

